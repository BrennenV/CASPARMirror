@page
@using System.Security.Claims;
@model CASPARWeb.Areas.Instr.Pages.Wishlists.IndexModel
@{
}
<input type="hidden" asp-for="WishlistId">
<div class="container">
	<div class="row pt=4">
		<!--Start Row-->
		<div class="col-4">
			<!--50% of row-->
			<h2 class="text-primary">
				Instructor Preferences
			</h2>
		</div><!-- End 1st Column-->
		<div class="col-3 text-end">
			<!--25% row right justified-->
			<span style="display:none" id="selectedSemesterId">@(Model.SelectedSemesterId != 0 ? Model.SelectedSemesterId : "0")</span>
			<select id="ddlSemesterInstance" class="form-select rounded">
			</select>
		</div> <!--End 2nd Column-->
	</div> <!--End Row-->
	<div id="accordion">
		<div class="card">
			<a class="btn-primary" data-bs-toggle="collapse" href="#collapseOne" style="text-decoration: none;">
				<div class="card-header">
					<h5>Details</h5>
				</div>
			</a>
			<div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
				<div class="card-body">
					<div class="row pt=4">
						<div class="col-2">
							<label><h6>Modalities</h6></label>
							<hr />
							<div class="col-12 px-2" id="modalities">
							</div>
						</div>

						<div class="col-4">
							<label><h6>Time Blocks</h6></label>
							<hr />
							<div class="row">
								<div class="col-6" id="timeBlocks1">
									
								</div>
								<div class="col-6" id="timeBlocks2">
									
								</div>
							</div>
						</div>

						<div class="col-2">
							<label><h6>Days of Week</h6></label>
							<hr />
							<div class="col-12 px-2" id="daysOfWeek">
							</div>
						</div>

						<div class="col-3">
							<label><h6>Campuses</h6></label>
							<hr />
							<div class="col-12 px-2" id="campuses">
							</div>
						</div>
				</div>
			</div>
		</div>

		<div class="card">
			<a class="btn-primary" data-bs-toggle="collapse" href="#collapseTwo" style="text-decoration: none;">
				<div class="card-header">
					<h5>Courses</h5>
				</div>
			</a>
			<div id="collapseTwo" class="collapse show" data-bs-parent="#accordion">
					<div class="row p-3">
						<!--Start Row-->
						<div class="col-5">
							@* <span style="display:none" id="selectedSemesterId">@(Model.SelectedSemesterId != 0 ? Model.SelectedSemesterId : "0")</span> *@
							<select id="ddlTemplateCourses" class="form-select rounded">
							</select>
						</div> <!--End 1stColumn-->
						<div class="col-2">
							<button type="button" class="btn btn-outline-primary rounded" id="btnAddCourse"><i class="bi bi-plus-circle"></i></button>
						</div>
					</div> <!--End Row-->
				<table class="table table-bordered table-striped p-3" id="DT_PreferenceDetails" style="width:100%">
					<thead>
						<tr>
							<th style="width: 10%;">Rank</th>
							<th style="width: 80%;">Title</th>
							<th style="width: 10%">&nbsp;</th>
						</tr>
					</thead>
				</table>

					<table class="table table-bordered table-striped" style="width:100%">
						<tbody>
							<!--Loop Here-->
							@foreach (var obj in Model.objCourseList)
							{
								<tr>
									<td width="10%">@obj.PreferenceRank</td>
									<td width="70%">@obj.Course.AcademicProgram.ProgramCode @obj.Course.CourseNumber @obj.Course.CourseTitle</td>
									<td>
										<button class="btn btn-outline-danger rounded" id="btnRemoveCourse"><i class="bi bi-trash-fill"></i></button>
									</td>
								</tr>
							}
							<!--End Loop Here-->
						</tbody>
					</table>
			</div>
		</div>
	</div>
</div> <!--Close Container-->
	@section Scripts{
		<script type="text/javascript">
			var userId = '@User.FindFirstValue(ClaimTypes.NameIdentifier)';
		</script>
		<script src="~/js/preferenceLists.js"></script>
	}
