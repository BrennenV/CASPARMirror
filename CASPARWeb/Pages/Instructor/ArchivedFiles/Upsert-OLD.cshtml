@page
@model CASPARWeb.Pages.Instructor.ArchivedFiles.UpsertModelOLD
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objPreferenceList.Id != 0 ? "Update " : "Add ") Preference List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objPreferenceList.Id">
            <input type="hidden" asp-for="objPreferenceList.InstructorId">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <div class="mb-3 col-6">
                        <label asp-for="objPreferenceList.SemesterInstanceId"></label>
                        <select id="ddlSemesterInstance" asp-for="objPreferenceList.SemesterInstanceId" asp-items="@Model.SemesterInstanceList" class="form-select">
                            <option disabled selected>--Select Semester--</option>
                        </select>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.objPreferenceList.Id != 0 ? "Update " : "Add ")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="./Index" class=" btn btn-outline-primary border form-control">
                            Back to Preference Lists
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>