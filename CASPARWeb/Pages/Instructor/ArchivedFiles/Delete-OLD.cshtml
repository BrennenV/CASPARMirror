@page
@model CASPARWeb.Pages.Instructor.PreferenceLists.DeleteModelOLD
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Preference List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objPreferenceList.Id" />
            <input type="hidden" asp-for="objPreferenceList.InstructorId">
            <div class="border p-3">
                <div class="mb-3 col-6">
                    <label asp-for="objPreferenceList.SemesterInstanceId"></label>
                    <select disabled id="ddlSemesterIntance" asp-for="objPreferenceList.SemesterInstanceId" asp-items="@Model.SemesterInstanceList" class="form-select"></select>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="./Index" class="btn btn-outline-primary border  form-control">
                            Back to Preference List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
