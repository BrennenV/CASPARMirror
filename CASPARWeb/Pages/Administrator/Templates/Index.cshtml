@page
@model CASPARWeb.Pages.Administrator.Templates.IndexModel
@{
}
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                @(Model.objSemester.SemesterName) Template
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-6 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-semesterId="@(Model.objSemester.Id)" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Course
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="DT_Templates" style="width:100%">
        <thead>
            <tr>
                <th>
                    Course
                </th>
                <th>
                    Quantity
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
    </table>
    <a asp-page="/Administrator/Semesters/Index" class=" btn btn-outline-primary border form-control">Back to Semester Templates</a>
</div> <!--Close Container-->
@section Scripts
{
    <script src="~/js/templates.js"></script>
}