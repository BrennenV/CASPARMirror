@page
@model CASPARWeb.Pages.Administrator.Users.UpsertModel
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objUser.Id != 0 ? "Update " : "Add ") User</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objUser.Id">
            <div class="border p-3">
                <label class=" ms-2">First Name</label>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objUser.UserFirstName" class="form-control border-0 shadow" />
                </div>
                <label class=" ms-2">Last Name</label>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objUser.UserLastName" class="form-control border-0 shadow" />
                </div>
                <label class=" ms-2">Email Address</label>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objUser.UserEmail" class="form-control border-0 shadow" />
                </div>
                <label class=" ms-2">Password</label>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objUser.UserPassword" class="form-control border-0 shadow" />
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.objUser.Id != 0 ? "Update " : "Add ")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="./Index" class=" btn btn-outline-primary border form-control">
                            Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>