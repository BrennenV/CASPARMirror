@page
@model CASPARWeb.Pages.Administrator.DaysOfWeeks.UpsertModel
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objDaysOfWeek.Id != 0 ? "Update " : "Add ") Days of the Week Choice</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="objDaysOfWeek.Id">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <div class="mb-3 col-6">
                        <label asp-for="objDaysOfWeek.DaysOfWeekTitle"></label>
                        <input asp-for="objDaysOfWeek.DaysOfWeekTitle" class="form-control border-0 shadow" />
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@(Model.objDaysOfWeek.Id != 0 ? "Update " : "Add ")</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="./Index" class=" btn btn-outline-primary border form-control">
                            Back to Days of the Week
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>